{
  "name": "benchmarkdotnet-results-publisher",
  "version": "2.0.2",
  "private": true,
  "description": "A GitHub Action that publishes results from BenchmarkDotNet benchmarks to a GitHub repository.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write eslint.config.mjs src/**/*.ts tests/**/*.ts",
    "format-check": "prettier --check eslint.config.mjs src/**/*.ts tests/**/*.ts",
    "generate": "npm run build && npm run package",
    "lint": "eslint src/**/*.ts --fix",
    "package": "esbuild lib/main.js --bundle --minify --outdir=dist --packages=bundle --platform=node --sourcemap --target=node24.0.0",
    "test": "vitest run",
    "publish": "npm run format && npm run lint && npm run generate",
    "all": "npm run publish && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martincostello/benchmarkdotnet-results-publisher.git"
  },
  "keywords": [
    "actions",
    "benchmarkdotnet",
    "github"
  ],
  "author": {
    "name": "Martin Costello",
    "url": "https://martincostello.com/"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/martincostello/benchmarkdotnet-results-publisher/issues"
  },
  "homepage": "https://github.com/martincostello/benchmarkdotnet-results-publisher#readme",
  "dependencies": {
    "@actions/core": "3.0.0",
    "@actions/github": "9.0.0",
    "@octokit/plugin-paginate-rest": "14.0.0",
    "@octokit/plugin-rest-endpoint-methods": "17.0.0",
    "glob": "13.0.6",
    "lru-cache": "11.2.6"
  },
  "devDependencies": {
    "@actions/io": "3.0.2",
    "@eslint/eslintrc": "3.3.4",
    "@eslint/js": "10.0.1",
    "@octokit/types": "16.0.0",
    "@stylistic/eslint-plugin": "5.9.0",
    "@types/node": "25.3.0",
    "@typescript-eslint/eslint-plugin": "8.56.1",
    "@typescript-eslint/parser": "8.56.1",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/eslint-plugin": "1.6.9",
    "@vitest/ui": "4.0.18",
    "esbuild": "0.27.3",
    "eslint": "10.0.2",
    "eslint-plugin-github": "6.0.0",
    "eslint-plugin-prettier": "5.5.5",
    "globals": "17.3.0",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "undici": "7.22.0",
    "vitest": "4.0.18"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 80,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
